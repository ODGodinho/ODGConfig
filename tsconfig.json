{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "paths": {
            "#types/*": [ "./@types/*" ],
            "@interfaces": [ "./src/interfaces" ],
            "@interfaces/*": [ "./src/interfaces/*" ]
        },
        "rootDirs": [
            ".",
            "./src"
        ],
        "typeRoots": [
            "./src/@types",
            "node_modules/@types"
        ],
        "types": [ "node" ]
    },
    "exclude": [
        "node_modules/",
        "dist/"
    ],
    "extends": "@odg/tsconfig/tsconfig.node.json",
    "include": [ "." ]
}
